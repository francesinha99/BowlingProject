@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<div class="container">

    <div class="row">

        <div class="col">
            <h3>Bowlers</h3>
        </div>

        <div class="col">
            <Navlink class="btn btn-primary float-end">Add Bowler</Navlink>
        </div>

    </div>

</div>




<div class="container">

    <div class="row">
        <div id="teams" class="col col-sm-3">
            <vc:teams></vc:teams>
        </div>

        <div class="col">
            <table class="table table-sm table-striped table-bordered">

                <thead>

                    <tr>
                        <th>First Name</th>
                        <th>Middle Initial</th>
                        <th>Last Name</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Zip</th>
                        <th>Phone Number</th>
                        
                    </tr>

                </thead>

                <tbody>
        
                    @foreach (Bowler b in Model)
                        {
                           <tr>
                               <td>@b.BowlerFirstName</td>
                               <td>@b.BowlerMiddleInit</td>
                               <td>@b.BowlerLastName</td>
                               <td>@b.BowlerAddress</td>
                               <td>@b.BowlerCity</td>
                               <td>@b.BowlerState</td>
                               <td>@b.BowlerZip</td>
                               <td>@b.BowlerPhoneNumber</td>

                               <td>
                                   <NavLink class="btn btn-warning btn-sm" href="">Edit</NavLink>
                               </td>

                               <td>
                                   <button class="btn btn-danger btn-sm">Delete</button> 
                               </td>
                           </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>

</div>


